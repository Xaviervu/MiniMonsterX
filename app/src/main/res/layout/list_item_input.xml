<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/input_output_icon_size"
            android:layout_height="@dimen/input_output_icon_size"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_weight="1"
            android:contentDescription="@string/input_icon"
            app:srcCompat="@drawable/input"
            android:layout_marginLeft="@dimen/margin_start" />

        <CheckedTextView
            android:id="@+id/checkedTextView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginLeft="@dimen/margin_start"
            android:layout_marginEnd="@dimen/margin_end_input"
            android:layout_marginRight="@dimen/margin_end_input"
            android:layout_weight="1"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:checked="true"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_vertical"
            android:text="@string/input"
            android:textAlignment="inherit"
            android:textSize="@dimen/input_output_text_size" />
    </LinearLayout>

    <View
        android:id="@+id/dividerInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/listDivider" />
</LinearLayout>